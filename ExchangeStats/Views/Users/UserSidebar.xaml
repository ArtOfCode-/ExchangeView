<UserControl x:Class="ExchangeStats.Views.Users.UserSidebar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExchangeStats.Views.Users"
      mc:Ignorable="d" 
      d:DesignHeight="50">

    <StackPanel Orientation="Horizontal" Cursor="Hand">
        <StackPanel>
            <TextBlock Name="Username" FontWeight="Bold" Margin="3"></TextBlock>
            <StackPanel Orientation="Horizontal">
                <Label Name="GoldBadges"></Label>
                <Label Name="SilverBadges"></Label>
                <Label Name="BronzeBadges"></Label>
            </StackPanel>
        </StackPanel>
        <Label Name="Reputation" Margin="10 0 0 0"></Label>
    </StackPanel>
</UserControl>
