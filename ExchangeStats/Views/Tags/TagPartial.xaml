<UserControl x:Class="ExchangeStats.Views.TagPartial"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExchangeStats.Views"
             mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Name="TagElement" Padding="5" Margin="5 0" BorderBrush="LightGray" BorderThickness="1"></Label>
                <Label Name="QuestionCount" Foreground="Gray"></Label>
            </StackPanel>
            <TextBlock Name="Description" Margin="5"></TextBlock>
            <Line Margin="5 0" Stroke="Gray"></Line>
        </StackPanel>
    </Grid>
</UserControl>
