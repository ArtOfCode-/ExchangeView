<UserControl x:Class="ExchangeStats.Views.QuestionPartial"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel Name="ScoreDetails" Orientation="Vertical">
                <Label Name="Score" HorizontalContentAlignment="Center" FontSize="20">-</Label>
                <Label HorizontalContentAlignment="Center">score</Label>
            </StackPanel>
            <StackPanel Name="ViewDetails" Orientation="Vertical">
                <Label Name="Views" HorizontalContentAlignment="Center" FontSize="20">-</Label>
                <Label HorizontalContentAlignment="Center">views</Label>
            </StackPanel>
            <StackPanel Orientation="Vertical" Name="QuestionDetails">
                <Label FontSize="16" Margin="0 3 0 0">
                    <TextBlock Name="Title" TextTrimming="CharacterEllipsis">---</TextBlock>
                </Label>
                <StackPanel Name="Tags" Orientation="Horizontal">
                    
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
